<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".detail">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="58dp"
                android:clickable="true"
                android:onClick="Oclick"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:text="Back"
                android:textColor="@color/orange"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewde"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="88dp"
                android:layout_marginTop="45dp"
                android:text="Detail"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:scaleType="center"
                app:srcCompat="@drawable/cart" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="335dp"
                android:layout_height="241dp"

                android:layout_gravity="center"
                android:scaleType="center"
                app:srcCompat="@drawable/shoe1" />

            <TextView
                android:id="@+id/textViewde2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/shoe1"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textViewde0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:text="In stock"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textVie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="@string/detail"
                android:textColor="@color/gray"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="@string/chose"
                android:textColor="@color/black"
                android:textSize="27dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagefd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/group_22" />

                <ImageView
                    android:id="@+id/imageer"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/size1" />

                <ImageView
                    android:id="@+id/imagee"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/group_24" />

                <ImageView
                    android:id="@+id/imagev"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/group_22" />

            </LinearLayout>

            <TextView
                android:id="@+id/textVietr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="Size"
                android:textColor="@color/black"
                android:textSize="27dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:id="@+id/imagefd4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/_7" />

                <ImageView
                    android:id="@+id/imageer3"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/_8" />

                <ImageView
                    android:id="@+id/imagee2"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/_9" />

                <ImageView
                android:id="@+id/imagev1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center"
                android:scaleType="center"
                app:srcCompat="@drawable/_0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:backgroundTint="@color/orange"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="Add to Cart" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/orange"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Buy" />

            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>